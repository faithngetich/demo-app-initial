<div id="clearance" class="sign-up">
 <h2><%= t(".title") %></h2>
 
 <% if @user.errors.any? %>
   <%= "Oops something went wrong" %>
 
   <ul>
     <% @user.errors.full_messages.each do | error| %>
       <li> <%= error %> </li>
     <% end %>
   </ul>
 <% end %>
 
 <%= form_for @user do |form| %>
   <%= render partial: '/users/form', object: form %>
 
   <div class="submit-field">
     <%= form.submit %>
   </div>
 <% end %>
</div>
